<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_banner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/icon_banner_default">

            <com.geek.huixiaoer.common.widget.autoviewpager.AutoScrollViewPager
                android:id="@+id/autoScrollViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/autoScrollIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_environment_protect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_main_environment"
                android:gravity="center"
                android:text="@string/module_environment_protect"
                android:textColor="@color/color_text_module"
                android:textSize="@dimen/t12" />

            <TextView
                android:id="@+id/tv_help_you"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_main_clear"
                android:gravity="center"
                android:text="@string/module_help_you"
                android:textColor="@color/color_text_module"
                android:textSize="@dimen/t12" />

            <TextView
                android:id="@+id/tv_discount_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_main_discount_store"
                android:gravity="center"
                android:text="@string/module_discount_store"
                android:textColor="@color/color_text_module"
                android:textSize="@dimen/t12" />

            <TextView
                android:id="@+id/tv_specialty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_main_dish"
                android:gravity="center"
                android:text="@string/module_specialty"
                android:textColor="@color/color_text_module"
                android:textSize="@dimen/t12" />

        </LinearLayout>

        <com.geek.huixiaoer.common.widget.OptionView
            android:id="@+id/option_hotSport"
            style="@style/TextCaptionSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:option_background="@drawable/line_bottom_bg"
            app:option_title_text="@string/module_title_environment_protect" />

        <RelativeLayout
            android:id="@+id/rl_hotSport_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_conner_red"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="1"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/tv_article_name_first"
                style="@style/TextCaptionBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tv_first"
                android:layout_toLeftOf="@+id/tv_article_hits_first"
                android:layout_toRightOf="@+id/tv_first"
                android:layout_toStartOf="@+id/tv_article_hits_first"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_article_hits_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_text_body"
                android:textSize="@dimen/t12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line_default_color" />

        <RelativeLayout
            android:id="@+id/rl_hotSport_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_conner_blue"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="2"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/tv_article_name_second"
                style="@style/TextCaptionBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tv_second"
                android:layout_toLeftOf="@+id/tv_article_hits_second"
                android:layout_toRightOf="@+id/tv_second"
                android:layout_toStartOf="@+id/tv_article_hits_second"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_article_hits_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_text_body"
                android:textSize="@dimen/t12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line_default_color" />

        <RelativeLayout
            android:id="@+id/rl_hotSport_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_conner_blue"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="3"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/tv_article_name_third"
                style="@style/TextCaptionBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tv_third"
                android:layout_toLeftOf="@+id/tv_article_hits_third"
                android:layout_toRightOf="@+id/tv_third"
                android:layout_toStartOf="@+id/tv_article_hits_third"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_article_hits_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_text_body"
                android:textSize="@dimen/t12" />

        </RelativeLayout>

        <TextView
            style="@style/TextCaptionSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_bottom_bg"
            android:padding="15dp"
            android:text="@string/module_title_help_you" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_clear_day"
                style="@style/TextCaptionBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_clear_daily"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/clear_daily" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_default_color" />

            <TextView
                android:id="@+id/tv_clear_room"
                style="@style/TextCaptionBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_clear_room"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/clear_room" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_default_color" />

            <TextView
                android:id="@+id/tv_clear_deep"
                style="@style/TextCaptionBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_clear_deep"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/clear_deep" />

        </LinearLayout>

        <TextView
            style="@style/TextCaptionSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_bottom_bg"
            android:padding="15dp"
            android:text="@string/module_discount_store" />

        <RelativeLayout
            android:id="@+id/rl_goods_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_bottom_bg"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_goods_one"
                android:layout_width="116dp"
                android:layout_height="76dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_title_one"
                style="@style/TextGoodsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_goods_one"
                android:layout_toRightOf="@+id/iv_goods_one"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_content_one"
                style="@style/TextGoodsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_goods_one"
                android:layout_toRightOf="@+id/iv_goods_one"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_discount_price_one"
                style="@style/TextGoodsDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_goods_one"
                android:layout_toRightOf="@+id/iv_goods_one"
                android:text="" />

            <TextView
                android:id="@+id/tv_cost_price_one"
                style="@style/TextGoodsCostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_discount_price_one"
                android:layout_toRightOf="@+id/tv_discount_price_one"
                android:text="" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_goods_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_bg"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_goods_two"
                android:layout_width="116dp"
                android:layout_height="76dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_title_two"
                style="@style/TextGoodsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_goods_two"
                android:layout_toRightOf="@+id/iv_goods_two"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_content_two"
                style="@style/TextGoodsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_goods_two"
                android:layout_toRightOf="@+id/iv_goods_two"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_discount_price_two"
                style="@style/TextGoodsDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_goods_two"
                android:layout_toRightOf="@+id/iv_goods_two"
                android:text="" />

            <TextView
                android:id="@+id/tv_cost_price_two"
                style="@style/TextGoodsCostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_discount_price_two"
                android:layout_toRightOf="@+id/tv_discount_price_two"
                android:text="" />

        </RelativeLayout>

        <TextView
            style="@style/TextCaptionSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_bottom_bg"
            android:padding="15dp"
            android:text="@string/module_specialty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">
            <!--图片比例241-161-->
            <ImageView
                android:id="@+id/iv_dish_one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/icon_dish_default_one"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_dish_two"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/icon_dish_default_two"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_dish_three"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/icon_dish_default_three"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_white"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">
            <!--图片比例241-161-->
            <ImageView
                android:id="@+id/iv_dish_four"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/icon_dish_default_four"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_dish_five"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/icon_dish_default_five"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_dish_six"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/icon_dish_default_six"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>