<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ignore="ContentDescription"
    tools:showIn="@layout/app_bar_main">

    <!--<include layout="@layout/include_main_content"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.geek.huixiaoer.common.widget.autoviewpager.AutoScrollViewPager
            android:id="@+id/autoScrollViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/autoScrollIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/rl_recycle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_main_bg_recycle" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_recycle"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_recycle"
                android:background="#80ffffff"
                android:gravity="center"
                android:text="@string/action_recovery"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/rl_housewifery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_housewifery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_main_bg_housewifery" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_housewifery"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_housewifery"
                android:background="#80ffffff"
                android:gravity="center"
                android:text="@string/action_housewifery"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/rl_supermarket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_supermarket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_main_bg_supermarket" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_supermarket"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_supermarket"
                android:background="#80ffffff"
                android:gravity="center"
                android:text="@string/action_supermarket"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/rl_dinning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_dinning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_main_bg_dining" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_dinning"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_dinning"
                android:background="#80ffffff"
                android:gravity="center"
                android:text="@string/action_dining"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/t14" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_member_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/all_padding"
        android:text="@string/member_login"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/t16" />


    <!--<FrameLayout-->
    <!--android:id="@+id/fl_content"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->
</LinearLayout>
