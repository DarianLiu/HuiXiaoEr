<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.geek.huixiaoer.common.widget.richEditText.InterceptLinearLayout
            android:id="@+id/line_intercept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color_white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/tv_user_name_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:text="评论人反对法发发的发房贷发放发放\n2016-3-12 12:12:12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_bottom_bg"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:text="文章标题"
                android:textColor="@color/color_text_caption"
                android:textSize="@dimen/t14" />

            <com.geek.huixiaoer.common.widget.richEditText.RichTextEditor
                android:id="@+id/richText"
                android:clickable="false"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color_white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </com.geek.huixiaoer.common.widget.richEditText.InterceptLinearLayout>

    </ScrollView>

</LinearLayout>